// Ebbinglish schema (MVP)
// - Google login via NextAuth (Auth.js) + Prisma adapter
// - Word library + review scheduling (Ebbinghaus-style stages)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Auth.js / NextAuth models ---
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts Account[]
  sessions Session[]

  words       Word[]
  reviewState ReviewState[]
  reviewLog   ReviewLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- App models ---
model Word {
  id        String   @id @default(cuid())
  userId    String
  text      String
  language  String   @default("en")
  note      String?

  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewState ReviewState?
  reviewLog   ReviewLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, createdAt])
  @@unique([userId, language, text])
}

// Ebbinghaus-like fixed stages (configurable in app code)
model ReviewState {
  id            String   @id @default(cuid())
  userId        String
  wordId        String   @unique

  stage         Int      @default(0)
  dueAt         DateTime
  lastReviewedAt DateTime?
  lapseCount    Int      @default(0)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  word Word @relation(fields: [wordId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, dueAt])
}

model ReviewLog {
  id        String   @id @default(cuid())
  userId    String
  wordId    String

  // 2 = know, 1 = fuzzy, 0 = donâ€™t know
  grade     Int
  msSpent   Int?

  reviewedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  word Word @relation(fields: [wordId], references: [id], onDelete: Cascade)

  @@index([userId, reviewedAt])
  @@index([wordId, reviewedAt])
}
