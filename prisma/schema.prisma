// Ebbinglish schema (MVP)
// - Google login via NextAuth (Auth.js) + Prisma adapter
// - Word library + review scheduling (Ebbinghaus-style stages)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Auth.js / NextAuth models ---
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  currentGlobalRound Int  @default(1)

  accounts Account[]
  sessions Session[]

  words          Word[]
  reviewState    ReviewState[]
  reviewLog      ReviewLog[]
  studyRounds    StudyRound[]
  studySessions  StudySession[]
  studySettings  StudySettings?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- App models ---
model Word {
  id        String   @id @default(cuid())
  userId    String
  text      String
  language  String   @default("en")
  note      String?
  isPriority     Boolean @default(false)
  manualCategory String?

  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewState ReviewState?
  reviewLog   ReviewLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, createdAt])
  @@unique([userId, language, text])
}

// Round-driven review state.
model ReviewState {
  id            String   @id @default(cuid())
  userId        String
  wordId        String   @unique

  lastReviewedAt DateTime?
  lapseCount    Int      @default(0)
  seenCount     Int      @default(0)
  consecutivePerfect Int @default(0)
  freezeRounds  Int      @default(0)
  isMastered    Boolean  @default(false)
  // 0: base, 1: after 3-round freeze, 2: after 6-round freeze, 3: mastered
  masteryPhase  Int      @default(0)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  word Word @relation(fields: [wordId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, createdAt])
  @@index([userId, freezeRounds, isMastered])
}

model ReviewLog {
  id        String   @id @default(cuid())
  userId    String
  wordId    String

  // 2 = know, 1 = fuzzy, 0 = donâ€™t know
  grade     Int
  revealedAnswer Boolean @default(false)
  msSpent   Int?

  reviewedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  word Word @relation(fields: [wordId], references: [id], onDelete: Cascade)

  @@index([userId, reviewedAt])
  @@index([wordId, reviewedAt])
}

model StudySettings {
  id                     String  @id @default(cuid())
  userId                 String  @unique
  sessionSize            Int     @default(20)
  freezeRounds           Int     @default(3)
  autoPlayAudio          Boolean @default(true)
  requireConsecutiveKnown Boolean @default(true)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StudyRound {
  id                 String   @id @default(cuid())
  userId             String
  name               String
  status             String   @default("active")
  wordIds            String[]
  completedWordIds   String[]
  attemptedWordIds   String[]
  firstTryKnownWordIds String[]

  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessions  StudySession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, status, createdAt])
}

model StudySession {
  id        String   @id @default(cuid())
  userId    String
  roundId   String
  type      String
  wordIds   String[]
  results   Json?

  startedAt DateTime @default(now())
  completedAt DateTime?

  user  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  round StudyRound @relation(fields: [roundId], references: [id], onDelete: Cascade)

  @@index([userId, startedAt])
  @@index([roundId, startedAt])
}
